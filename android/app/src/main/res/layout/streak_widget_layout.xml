<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/widget_brand_gradient_background">

    <!-- Streak counter content (for paid users) -->
    <LinearLayout
        android:id="@+id/ll_streak_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_localized_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/elza_round_bold"
            android:text="@string/streak_label_sugar_free_since"
            android:textColor="#FFFFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1" />

        <LinearLayout
            android:id="@+id/ll_days_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal|bottom"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_days_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/elza_round_bold"
                tools:text="5"
                android:textColor="#FFFFFFFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_days_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/elza_round_medium" 
                android:text="@string/streak_days_suffix"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_hours_minutes_value_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/elza_round_bold"
            tools:text="3hr 15m"
            android:textColor="#FFFFFFFF"
            android:textSize="30sp"
            android:visibility="gone"
            tools:visibility="gone"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_minutes_value_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/elza_round_bold"
            tools:text="15m"
            android:textColor="#FFFFFFFF"
            android:textSize="30sp"
            android:visibility="gone"
            tools:visibility="gone"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_hours_minutes_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/widget_secondary_text_background" 
            android:fontFamily="@font/elza_round_medium"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            tools:text="3hr 15m"
            android:textColor="#FF1A1A1A" 
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

    <!-- Subscription prompt content (for free users) -->
    <LinearLayout
        android:id="@+id/ll_subscription_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_lock"
            android:tint="#CCFFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_subscribe_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/elza_round_medium"
            android:text="@string/streak_subscribe_prompt"
            android:textColor="#FFFFFFFF"
            android:textSize="14sp"
            android:textAlignment="center"
            android:lineSpacingMultiplier="1.2"
            android:ellipsize="end"
            android:maxLines="2"
            android:singleLine="false" />

    </LinearLayout>

</LinearLayout> 