# Stoppr App Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# SUPERWALL - Paywall and Subscription Management
# =============================================================================
# Get your API keys from: https://superwall.com/dashboard
SUPERWALL_IOS_API_KEY=YOUR_SUPERWALL_IOS_API_KEY_HERE
SUPERWALL_ANDROID_API_KEY=YOUR_SUPERWALL_ANDROID_API_KEY_HERE

# =============================================================================
# REVENUECAT - Cross-platform Subscription Management
# =============================================================================
# Get your API keys from: https://app.revenuecat.com/
# Public keys are safe to use in client apps
# Private key should only be used server-side
REVENUECAT_IOS_API_KEY=YOUR_REVENUECAT_IOS_API_KEY_HERE
REVENUECAT_ANDROID_API_KEY=YOUR_REVENUECAT_ANDROID_API_KEY_HERE
REVENUECAT_PRIVATE_API_KEY=YOUR_REVENUECAT_PRIVATE_API_KEY_HERE

# =============================================================================
# MIXPANEL - Analytics and User Behavior Tracking
# =============================================================================
# Get your credentials from: https://mixpanel.com/settings/project
MIXPANEL_API_KEY=YOUR_MIXPANEL_API_KEY_HERE
MIXPANEL_USERNAME=YOUR_MIXPANEL_USERNAME_HERE
MIXPANEL_SECRET=YOUR_MIXPANEL_SECRET_HERE

# =============================================================================
# CRISP - Customer Support Chat
# =============================================================================
# Get your website ID from: https://app.crisp.chat/
CRISP_WEBSITE_ID=YOUR_CRISP_WEBSITE_ID_HERE

# =============================================================================
# OPENAI - AI Features (Food Recognition, Chatbot)
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# =============================================================================
# REPLICATE - AI Model Hosting
# =============================================================================
# Get your API token from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=YOUR_REPLICATE_API_TOKEN_HERE

# =============================================================================
# FIREBASE SERVICE ACCOUNT
# =============================================================================
# Path to Firebase service account JSON file
# Generate from Firebase Console → Project Settings → Service Accounts
# See README.md for detailed instructions
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=tools/firebase_cloud/functions/YOUR_PROJECT_ID-firebase-adminsdk-XXXXX.json

# =============================================================================
# APPSFLYER - Attribution and Marketing Analytics
# =============================================================================
# Get your credentials from: https://hq1.appsflyer.com/
APPSFLYER_APP_ID=YOUR_APPSFLYER_APP_ID_HERE
APPSFLYER_DEV_KEY=YOUR_APPSFLYER_DEV_KEY_HERE
APPSFLYER_ONELINK=YOUR_APPSFLYER_ONELINK_HERE
APPSFLYER_ONELINK_URL=YOUR_APPSFLYER_ONELINK_URL_HERE
APPSFLYER_ONELINK_TEMPLATE=YOUR_APPSFLYER_ONELINK_TEMPLATE_HERE

# =============================================================================
# FIREBASE CLIENT API KEYS
# =============================================================================
# Get these from Firebase Console → Project Settings → General
# After adding iOS and Android apps, download config files
# See README.md for detailed instructions on generating config files
FIREBASE_ANDROID_API_KEY=YOUR_FIREBASE_ANDROID_API_KEY_HERE
FIREBASE_ANDROID_APP_ID=YOUR_FIREBASE_ANDROID_APP_ID_HERE
FIREBASE_IOS_API_KEY=YOUR_FIREBASE_IOS_API_KEY_HERE
FIREBASE_IOS_APP_ID=YOUR_FIREBASE_IOS_APP_ID_HERE
FIREBASE_IOS_CLIENT_ID=YOUR_FIREBASE_IOS_CLIENT_ID_HERE
FIREBASE_MESSAGING_SENDER_ID=YOUR_FIREBASE_MESSAGING_SENDER_ID_HERE
FIREBASE_PROJECT_ID=YOUR_FIREBASE_PROJECT_ID_HERE
FIREBASE_STORAGE_BUCKET=YOUR_FIREBASE_STORAGE_BUCKET_HERE

# =============================================================================
# MUX - Video Hosting and Streaming
# =============================================================================
# Get your credentials from: https://dashboard.mux.com/settings/access-tokens
MUX_TOKEN_ID=YOUR_MUX_TOKEN_ID_HERE
MUX_SECRET_KEY=YOUR_MUX_SECRET_KEY_HERE

# =============================================================================
# SENDGRID - Email Delivery Service
# =============================================================================
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY_HERE

# =============================================================================
# GROQ - AI Inference (Alternative to OpenAI)
# =============================================================================
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=YOUR_GROQ_API_KEY_HERE

# =============================================================================
# EDAMAM - Nutrition Database API
# =============================================================================
# Get your credentials from: https://developer.edamam.com/
EDAMAM_API_KEY=YOUR_EDAMAM_API_KEY_HERE
EDAMAM_APP_ID=YOUR_EDAMAM_APP_ID_HERE

# =============================================================================
# SPOONACULAR - Recipe API
# =============================================================================
# Get your API key from: https://spoonacular.com/food-api
SPOONACULAR_API_KEY=YOUR_SPOONACULAR_API_KEY_HERE
